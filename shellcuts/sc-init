SOURCE="/usr/local/bin/shellcuts.sh"

clear
echo "Thank you for downloading Shellcuts!"
echo ""
echo "Enter the number corresponding to the action you wish to perform:"
echo "0) Automatically modify bashrc to complete installation"
echo "1) Manually modify bashrc"
echo "2) Display contents of this script"
read COMMAND

if [ "$COMMAND" == "0" ]; then
    echo "Adding to bashrc..."
    echo "" >> ~/.bashrc
    echo "# checks if the shellcuts source file exists and includes it" >> ~/.bashrc
    echo "if [ -f $SOURCE ]; then" >> ~/.bashrc
    echo "    . $SOURCE" >> ~/.bashrc
    echo "fi" >> ~/.bashrc

    echo "Sourcing from bashrc..."
    . ~/.bashrc
    echo "Done!"

elif [ "$COMMAND" == "1" ]; then
    echo ""
    echo "Add these lines to your .bashrc:"
    echo ""
    echo "if [ -f $SOURCE ]; then"
    echo "    . $SOURCE"
    echo "fi"
    echo ""
    echo "Then run 'source ~/.bashrc' to begin using shellcuts!"

elif [ "$COMMAND" == "2" ]; then
    echo "LOCATION: $(dirname $0)"
    echo ""
    echo "CONTENTS:"
    cat "$0"

fi
